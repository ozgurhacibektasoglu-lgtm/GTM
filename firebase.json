{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "README.md",
      "start.command"
    ],
    "headers": [
      {
        "source": "/tournaments/embed.html",
        "headers": [
          {
            "key": "X-Frame-Options",
            "value": "ALLOWALL"
          },
          {
            "key": "Content-Security-Policy",
            "value": "frame-ancestors *"
          }
        ]
      }
    ]
  }
}
